@model DTO.Utilisateurs

@{
    ViewData["Title"] = "Détails";

    var npaCookie = Context.Request.Cookies["LocaliteNPA"];

    var villeCookie = Context.Request.Cookies["LocaliteVille"];
}

<h1>Détails de l'utilisateur</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdUtilisateur)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdUtilisateur)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Prenom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prenom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Adresse)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Adresse)
        </dd>
        <dt class = "col-sm-2">
            NPA
        </dt>
        <dd class = "col-sm-10">
            @npaCookie
        </dd>
        <dt class = "col-sm-2">
            Ville
        </dt>
        <dd class = "col-sm-10">
            @villeCookie
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumTelephone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumTelephone)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Retourner à la liste de commandes</a>
</div>
