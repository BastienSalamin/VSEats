@model WebApp.Models.PanierVM

@{
    ViewData["Title"] = "Panier";
}

<h1>Mon panier</h1>

<p>
    <a asp-action="Historique">Historique de mes commandes</a>
</p>
@using (Html.BeginForm("Index", "Commandes", FormMethod.Post))
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    IdPlat
                </th>
                <th>
                    Nom
                </th>
                <th>
                    Prix
                </th>
                <th>
                    Quantité
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Items != null && Model.Items.Any())
            {
                @for(int i = 0; i < Model.Items.Count; i++)
                {
            <tr>
                @Html.HiddenFor(modelItem => modelItem.Items[i].IdRestaurant)
                @Html.HiddenFor(modelItem => modelItem.Items[i].Description)
                <td>
                    @Html.DisplayFor(modelItem => modelItem.Items[i].IdPlat)
                    @Html.HiddenFor(modelItem => modelItem.Items[i].IdPlat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.Items[i].Nom)
                    @Html.HiddenFor(modelItem => modelItem.Items[i].Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.Items[i].Prix) CHF
                    @Html.HiddenFor(modelItem => modelItem.Items[i].Prix)
                </td>
                <td>
                    @Html.EditorFor(modelItem => modelItem.Items[i].Quantite)
                    @Html.HiddenFor(modelItem => modelItem.Items[i].Quantite)
                </td>
            </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" align="center">
                        Pas d'éléments
                    </td>
                </tr>
            }
        </tbody>
    </table>


@if (Model.Items != null && Model.Items.Any())
{
    <h5>Veuillez spécifier l'heure de livraison</h5>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Index">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="HeureLivraison" class="control-label"></label>
                    <input asp-for="HeureLivraison" class="form-control" data-date-format="hh:mm" type="text" />
                    <span asp-validation-for="HeureLivraison" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Commander" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
}
}
