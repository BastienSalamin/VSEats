@model WebApp.Models.CommandeVM

@{
    ViewData["Title"] = "Commander";
}

<h3>Commander @Model.Nom</h3>

<h5>Veuillez spécifier la quantité et l'heure de livraison</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Commander">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="IdUtilisateur" type="hidden" />
            <input asp-for="IdPlat" type="hidden" />
            <input asp-for="Prix" type="hidden" />
            <h5> @Model.Prix CHF</h5>
            <div class="form-group">
                <label asp-for="Quantite" class="control-label"></label>
                <input asp-for="Quantite" class="form-control" />
                <span asp-validation-for="Quantite" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HeureLivraison" class="control-label"></label>
                <input asp-for="HeureLivraison" class="form-control" data-date-format="dd/MM/yyyy hh:mm:ss tt" type="text" />
                <span asp-validation-for="HeureLivraison" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Commander" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details">Retour à la liste de plats</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
